---
import PageLayout from "@/layouts/PageLayout.astro";
import Blogcard from "@/components/cards/blogcard";
const news = await Astro.glob("@/pages/news/*.md");
---

<PageLayout>
    <main class="px-6 md:px-[25vh]">
        <section class="my-8">
            <h1 class="text-4xl text-center mr-2 text-nord10">
                NEWS
            </h1>
            <div class="mb-8">
                <br />
                <div class="flex items-center justify-center w-full">
                    <div
                        class="grid grid-cols-1 lg:grid-cols-2 xl:grid-cols-3 space-x-2"
                    >
                        {
                            news.map((blog) => (
                                <div>
                                    <Blogcard
                                        name={blog.frontmatter.title}
                                        description={
                                            blog.frontmatter.description
                                        }
                                        link={blog.frontmatter.link}
                                        img={blog.frontmatter.thumbnail}
                                    />
                                </div>
                            ))
                        }
                    </div>
                </div>
            </div>

            <!-- <section class="my-8">
                <h1 class="text-3xl text-nord10">PHOTO GALLERY</h1>
                <div class="relative">
                    <EventsGallery client:visible />
                </div>
            </section> -->
        </section>
    </main>
</PageLayout>
