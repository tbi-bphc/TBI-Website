    <div class="flex flex-col items-center justify-center px-20 md:px-[25vh]">
      <h1 class="flex items-center justify-center text-4xl text-nord10 mb-5">
        INCUBATEES
      </h1>
      <div class="my-8">
        <MultiImageCarousel client:visible />
      </div>
    </div>
  </section>
  <hr class="h-1 my-8 border-0 bg-nord10" />
  <!-- Impact -->
