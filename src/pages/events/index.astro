---
import PageLayout from "@/layouts/PageLayout.astro";
import Card from "@/components/cards/card.astro";
import EventsGallery from "./eventsgallery";
import Eventcard from "@/components/cards/eventcard.astro";
import Blogcard from "@/components/cards/blogcard.astro";
const blogs = await Astro.glob("@/pages/blogs/*.md");
---

<PageLayout>
    <main class="px-6 md:px-[25vh]">
        <section class="my-8">
            <h1 class="text-3xl text-nord10">
                EVENTS AND TALKS CONDUCTED BY TBI
            </h1>
            <div class="mb-8">
                <br />
                <p class="mb-8">
                    In case you have an incredible idea, a team in place and
                    desire to turn your dreams into reality, we encourage you to
                    grab this opportunity of participating in SEEP-2023. TBIS
                    brings you an awesome opportunity to showcase your inner
                    entrepreneur and pitch your idea to a panel of judges with
                    substantial experience; the best, but also the most
                    unyielding juries you could have asked for!
                </p>
                <div class="flex items-center justify-center w-full">
                    <div
                        class="grid grid-cols-1 lg:grid-cols-2 xl:grid-cols-3 space-x-2"
                    >
                        {
                            blogs.map((blog) => (
                                <div>
                                    <Blogcard
                                        name={blog.frontmatter.title}
                                        description={
                                            blog.frontmatter.description
                                        }
                                        link={blog.frontmatter.link}
                                        img={blog.frontmatter.thumbnail}
                                    />
                                </div>
                            ))
                        }
                    </div>
                </div>
            </div>

            <!-- <section class="my-8">
                <h1 class="text-3xl text-nord10">PHOTO GALLERY</h1>
                <div class="relative">
                    <EventsGallery client:visible />
                </div>
            </section> -->
        </section>
    </main>
</PageLayout>
