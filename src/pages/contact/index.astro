---
import PageLayout from "@/layouts/PageLayout.astro";
import Contactcard from "@/components/cards/contactcard.astro";
import { Mail, MapPinIcon, Phone } from "lucide-react";
import ContactGallery from "./gallery/contactgallery";
const cards = [
    {
        title: "Office Location",
        icon: "üìç",
        details: "BITS Pilani Hyderabad Campus - Jawahar Nagar, Kapra Mandal Medchal District - 500 078 Telangana, India",
        extra: "Visiting Hours: Monday to Friday, 9 AM to 4 PM",
    },
    {
        title: "Connect With Us",
        icon: "‚úâÔ∏è",
        details: " tbi@hyderabad.bits-pilani.ac.in ",
        extra: "Phone: 040-66303607/955",
    },
];
---

<PageLayout>
    <section>
        <ContactGallery client:visible />
    </section>
    <main class="px-6 md:px-[25vh]">
        <section class="text-center py-8">
            <h3 class="text-2xl mt-2 text-nord2">
                Step into TBIS and the startup ecosystem of BITS Pilani, Hyderabad Campus
            </h3>
            <div class="flex flex-col md:flex-row justify-center gap-6 mt-6">
                {
                    cards.map((card) => (
                        <div class="bg-gray-100 p-6 rounded-lg shadow-md w-full md:w-1/3 text-left">
                            <div class="text-3xl">{card.icon}</div>
                            <h4 class="text-lg font-bold mt-4">{card.title}</h4>
                            <p class="mt-2">{card.details}</p>
                            <p class="text-nord10 font-semibold mt-2">
                                {card.extra}
                            </p>
                        </div>
                    ))
                }
            </div>
        </section>
        <div class="mt-10 mx-auto">
            <div class="flex items-center justify-center w-full">
                    <section class="bg-nord6 p-4 w-[50%] rounded-xl">
                        <form
                            action="https://api-legacy.accubate.app/surveyHTMLResponse/555"
                            name="form"
                            id="form"
                            method="POST"
                            accept-charset="UTF-8"
                            enctype="multipart/form-data"
                            class="mx-auto h-full"
                        >
                            <div class="h-full">
                                <div class="my-2">
                                    <div class="my-1">
                                        <label class="text-nord10">Email</label>
                                    </div>
                                    <input
                                        type="email"
                                        minlength="0"
                                        maxlength="50"
                                        required
                                        name="1"
                                        id="Email"
                                        placeholder="Enter Your Email"
                                        class="rounded-md bg-white p-1 w-full"
                                    />
                                </div>
                                <div class="my-2 mt-8">
                                    <div class="my-1">
                                        <label class="text-nord10">Name</label>
                                    </div>
                                    <input
                                        type="text"
                                        minlength="0"
                                        maxlength="50"
                                        required
                                        name="2"
                                        id="Name"
                                        placeholder="Enter Your Name"
                                        class="rounded-md bg-white p-1 w-full"
                                    />

                                    <button
                                        class="bg-nord10 p-2 mt-8 rounded-xl text-nord4"
                                        type="submit">Submit</button
                                    >
                                </div>
                            </div>
                        </form>
                    </section>
               
            </div>
        </div>
    </main>
    <section>
        <h1 class="text-center text-4xl my-8 text-nord10">REACH HERE</h1>
        <div class="flex justify-center items-center m-4">
            <iframe
                src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d475.52429044630327!2d78.57132679556355!3d17.54593996114382!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x3bcb835e83bb15f3%3A0xeb19df752c922e0c!2sTechnology%20Business%20Incubator%20-%20BITS%20PILANI%20HYD!5e0!3m2!1sen!2sin!4v1723529179733!5m2!1sen!2sin"
                width="600"
                height="450"
                width="800"
                height="450"
                style="border:0;"
                allowfullscreen=""
                loading="lazy"
                referrerpolicy="no-referrer-when-downgrade"></iframe>
        </div>
    </section>
</PageLayout>
