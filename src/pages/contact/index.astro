---
import PageLayout from "@/layouts/PageLayout.astro";
import Contactcard from "@/components/cards/contactcard.astro";
import { Mail, MapPinIcon, Phone } from "lucide-react";
import ContactGallery from "./gallery/contactgallery";
const cards = [
    {
        title: "Office Location",
        icon: "üìç",
        details:
            "BITS Pilani Hyderabad Campus - Jawahar Nagar, Kapra Mandal Medchal District - 500 078 Telangana, India",
        extra: "Visiting Hours: Monday to Friday, 9 AM to 4 PM",
    },
    {
        title: "Connect With Us",
        icon: "‚úâÔ∏è",
        details: " tbi@hyderabad.bits-pilani.ac.in ",
        extra: "Phone: 040-66303607/955",
    },
];
---

<PageLayout>
    <section>
        <ContactGallery client:visible />
    </section>
    <main class="px-6 md:px-[25vh]">
        <section class="text-center py-8">
            <h3 class="text-2xl mt-2 text-nord2">
                Step into TBIS and the startup ecosystem of BITS Pilani,
                Hyderabad Campus
            </h3>
            <div class="flex flex-col md:flex-row justify-center gap-6 mt-6">
                {
                    cards.map((card) => (
                        <div class="bg-gray-100 p-6 rounded-lg shadow-md w-full md:w-1/3 text-left">
                            <div class="text-3xl">{card.icon}</div>
                            <h4 class="text-lg font-bold mt-4">{card.title}</h4>
                            <p class="mt-2">{card.details}</p>
                            <p class="text-nord10 font-semibold mt-2">
                                {card.extra}
                            </p>
                        </div>
                    ))
                }
            </div>
        </section>
        
        <!-- Enhanced Contact Form Section -->
        <div class="mt-16 mb-16">
            <div class="flex items-center justify-center w-full">
                <section class="w-full max-w-4xl">
                    <!-- Form Header -->
                    <div class="text-center mb-8">
                        <h3 class="text-3xl font-bold text-nord10 mb-3">
                            Contact Us
                        </h3>
                        <p class="text-nord2 text-lg">
                            For inquiries, partnerships, or support, please complete the form below. Our team will respond within 24 hours during business days.
                        </p>
                    </div>
                    
                    <!-- Form Container matching site's card design -->
                    <div class="bg-white rounded-xl shadow-[0_0_10px_rgba(0,0,0,0.15)] overflow-hidden">
                        <!-- Google Form -->
                        <div class="p-6">
                            <iframe
                                src="https://docs.google.com/forms/d/e/1FAIpQLSecBZZmHeQ8INGG3P1YXtjHwdnUXYrjVLT7T1nYdCLUBhZhFg/viewform?embedded=true"
                                width="100%"
                                height="700"
                                class="rounded-lg border-0"
                                style="min-height: 700px;"
                                frameborder="0"
                                marginheight="0"
                                marginwidth="0"
                            >
                                Loading‚Ä¶
                            </iframe>
                        </div>
                    </div>
                </section>
            </div>
        </div>
    </main>
    
    <!-- Map Section -->
    <section class="py-12">
        <div class="px-6 md:px-[25vh]">
            <h1 class="text-center text-4xl mb-8 font-bold text-nord10">
                Reach Here
            </h1>
            <div class="flex justify-center items-center">
                <div class="w-full max-w-4xl">
                    <div class="bg-white rounded-xl shadow-[0_0_10px_rgba(0,0,0,0.15)] overflow-hidden">
                        <iframe
                            src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d475.52429044630327!2d78.57132679556355!3d17.54593996114382!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x3bcb835e83bb15f3%3A0xeb19df752c922e0c!2sTechnology%20Business%20Incubator%20-%20BITS%20PILANI%20HYD!5e0!3m2!1sen!2sin!4v1723529179733!5m2!1sen!2sin"
                            width="100%"
                            height="450"
                            style="border:0;"
                            allowfullscreen=""
                            loading="lazy"
                            referrerpolicy="no-referrer-when-downgrade"
                        >
                        </iframe>
                    </div>
                </div>
            </div>
        </div>
    </section>
</PageLayout>
