---
import PageLayout from "@/layouts/PageLayout.astro";
import Contactcard from "@/components/cards/contactcard.astro";
import { Mail, MapPinIcon, Phone} from 'lucide-react'
---

<PageLayout>
    <main class="px-6 md:px-[25vh]">
        <div class="flex flex-col md:flex-row my-8 w-full">
            <div class="my-auto flex flex-col items-center justify-center">
                <div class="mb-20">
                    <h1 class="w-full text-left text-4xl my-8 text-nord10">
                        CONTACT US
                    </h1>
                    <p class="text-lg text-left">
                        Need to get in touch with us? Either fill out the form
                        with your inquiry or find the department email you'd
                        like to contact below.
                    </p>
                    <div class="my-8 space-y-2">
                        <div class="flex">
                            <MapPinIcon/>
                            <p class="ml-2">
                                Location of TBI
                            </p>
                        </div>
                        <div class="flex">
                            <Mail/>
                            <p class="ml-2">
                                tbi@bits.hyderabad.com
                            </p>
                        </div>
                        <div class="flex">
                            <Phone/>
                            <p class="ml-2">
                                +91-40 66303 607/955
                            </p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="w-full mt-4 h-full mx-auto">
                <div class="flex w-full items-center justify-center h-full">
                    <div class="w-full h-full">
                        <div class="w-full px-6 h-full">
                            <section class="bg-nord6 p-5 w-full rounded-xl">
                                <form
                                    action="https://api-legacy.accubate.app/surveyHTMLResponse/555"
                                    name="form"
                                    id="form"
                                    method="POST"
                                    accept-charset="UTF-8"
                                    enctype="multipart/form-data"
                                    class="mx-auto h-full"
                                >
                                    <div class="h-full">
                                        <div class="my-2">
                                            <div class="my-1"><label class=" text-nord10">Email</label></div>
                                            <input
                                                type="email"
                                                minlength="0"
                                                maxlength="50"
                                                required
                                                name="1"
                                                id="Email"
                                                placeholder="Enter Your Email"
                                                class="rounded-md bg-white p-1 w-full"
                                            />
                                        </div>
                                        <div class="my-2 mt-8">
                                            <div class="my-1"><label class=" text-nord10">Name</label></div>
                                            <input
                                                type="text"
                                                minlength="0"
                                                maxlength="50"
                                                required
                                                name="2"
                                                id="Name"
                                                placeholder="Enter Your Name"
                                                class="rounded-md bg-white p-1 w-full"
                                            />
                                        </div>
                                        <button class=" bg-nord10 p-1 mt-8 rounded-xl text-nord4" type="submit">Submit</button>
                                    </div>
                                </form>
                            </section>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <section>
            <h1 class="text-center text-4xl my-8 text-nord10">REACH HERE</h1>
            <div class="flex justify-center items-center m-4">
                <iframe
                    src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d475.52429044630327!2d78.57132679556355!3d17.54593996114382!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x3bcb835e83bb15f3%3A0xeb19df752c922e0c!2sTechnology%20Business%20Incubator%20-%20BITS%20PILANI%20HYD!5e0!3m2!1sen!2sin!4v1723529179733!5m2!1sen!2sin"
                    width="600"
                    height="450"
                    width="800"
                    height="450"
                    style="border:0;"
                    allowfullscreen=""
                    loading="lazy"
                    referrerpolicy="no-referrer-when-downgrade"></iframe>
            </div>
        </section>
    </main>
</PageLayout>
