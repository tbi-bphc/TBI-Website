---
import PageLayout from "@/layouts/PageLayout.astro";
import TeamCard from "@/components/cards/teamcard.astro";
// note that all links of social media should be absolute ("http://linkedin.com/..." not "linkedin.com/")
---

<PageLayout>
    <main class="px-6 md:px-[25vh] my-8">
        <section class="text-center text-4xl my-8">OUR TEAM</section>
        <div class="flex items-center justify-center">
            <section class="grid grid-cols-1 md:grid-cols-2 gap-10">
                <TeamCard
                    name="Dr. Sandeep Raut"
                    description="The General Manager for the Technology and Business Incubator, BITS Pilani, Hyderabad Campus"
                />
                <TeamCard
                    name="Mr. Mir Ali"
                    description="The Assistant Manager for the Technology and Business Incubator, BITS Pilani, Hyderabad Campus"
                />
            </section>
        </div>
    </main>
</PageLayout>
