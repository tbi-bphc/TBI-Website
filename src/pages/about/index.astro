const contents = [
  {
    title: "BPHC",
    link: "#bphc",
  },
  {
    title: "TBI",
    link: "#tbi",
  },
  {
    title: "Thrust areas",
    link: "#thrust-areas",
  },

  {
    title: "Governing & Operations",
    link: "#team",
  },
];

const pictures = [
  "/thrustareas/agritech.png",
  "/thrustareas/biotech.png",
  "/thrustareas/ict.png",
