---
import "@/styles/globals.css";
import Navbar from "@/components/navbar/navbar";
import Header from "@/components/header/header";
import Footer from "@/components/footer/footer.astro";
const { frontmatter } = Astro.props;
const image = frontmatter.image;
const title = frontmatter.title;
---

<html lang="en">
    <head>
        <meta charset="utf-8" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <meta name="viewport" content="width=device-width" />
        <meta name="generator" content={Astro.generator} />
        <title>TBI- Blog</title>
    </head>
    <body>
        <div
            class="absolute inset-0 -z-10 h-full w-full bg-nord-white bg-[linear-gradient(to_right,#8080800a_1px,transparent_1px),linear-gradient(to_bottom,#8080800a_1px,transparent_1px)] bg-[size:14px_24px]"
        >
        </div>
        <!-- <Header client:visible /> -->
        <Navbar client:visible />
        <main class="px-6 md:px-[25vh] my-8 prose-lg">
            <h2 class="text-center mb-0">{title}</h2>
            <div class="flex items-center justify-center w-full">
                <img src={image} alt="image" class="w-[30vw]" />
            </div>

            <slot />
        </main>
        <Footer />
    </body>
</html>
