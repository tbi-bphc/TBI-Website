---
// Footer.astro
const aboutTbiLinks = [
  { href: "/about", text: "About Us" },
  { href: "/programmes", text: "Programs" },
  { href: "/infrastructure", text: "Infrastructure" },
  { href: "/incubatees", text: "Portfolio" },
  { href: "/stakeholders", text: "Stakeholders" },
  { href: "/events", text: "Activities" },
  { href: "/contact-us", text: "Contact Us" },
];

const quickLinks = [
  { href: "/grievance-policy", text: "Grievance Policy" },
  { href: "/corporate-notices", text: "Corporate Notices" },
  { href: "/terms-and-conditions", text: "Terms and Conditions" },
  { href: "/privacy-policy", text: "Privacy and Cookies Policy" },
  { href: "/media-kit", text: "Media Kit" },
  { href: "/rti", text: "RTI" },
];
---

<main>
    <footer class="bg-nord0 text-nord4 p-8 sticky top-0 z-50 py-6">
        <div class="container mx-auto flex flex-col md:flex-row justify-between">
            <div class="w-full md:w-1/4 mb-8 md:mb-0">
                <img
                    src="/BITS_Pilani-Logo 4.png"
                    alt="BITS Pilani Logo"
                    class="w-14"
                />
                <h3 class="text-nord8 font-semibold text-lg mt-2">About TBI</h3>
                <p class="text-nord4 mt-2">
                    TBI is a premier innovation incubator based out of
                    BITS Pilani, Hyderabad Campus.
                </p>
                <div class="mt-2">
                    <h4 class="text-nord8 font-semibold">Follow Us</h4>
                    <div class="flex space-x-4 mt-1">
                        <a
                            href="https://twitter.com/tbi"
                            class="text-nord4 hover:text-nord8"
                        >
                            <svg
                                class="w-6 h-6"
                                fill="currentColor"
                                viewBox="0 0 24 24"
                                aria-hidden="true"
                            >
                                <path
                                    d="M8.29 20.251c7.547 0 11.675-6.253 11.675-11.675 0-.178 0-.355-.012-.53A8.348 8.348 0 0022 5.92a8.19 8.19 0 01-2.357.646 4.118 4.118 0 001.804-2.27 8.224 8.224 0 01-2.605.996 4.107 4.107 0 00-6.993 3.743 11.65 11.65 0 01-8.457-4.287 4.106 4.106 0 001.27 5.477A4.072 4.072 0 012.8 9.713v.052a4.105 4.105 0 003.292 4.022 4.095 4.095 0 01-1.853.07 4.108 4.108 0 003.834 2.85A8.233 8.233 0 012 18.407a11.616 11.616 0 006.29 1.84"
                                ></path>
                            </svg>
                        </a>
                        <a
                            href="https://linkedin.com/company/tbi"
                            class="text-nord4 hover:text-nord8"
                        >
                            <svg
                                class="w-6 h-6"
                                fill="currentColor"
                                viewBox="0 0 24 24"
                                aria-hidden="true"
                            >
                                <path
                                    d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"
                                ></path>
                            </svg>
                        </a>
                        <a
                            href="https://facebook.com/tbi"
                            class="text-nord4 hover:text-nord8"
                        >
                            <svg
                                class="w-6 h-6"
                                fill="currentColor"
                                viewBox="0 0 24 24"
                                aria-hidden="true"
                            >
                                <path
                                    d="M22 12c0-5.523-4.477-10-10-10S2 6.477 2 12c0 4.991 3.657 9.128 8.438 9.878v-6.987h-2.54V12h2.54V9.797c0-2.506 1.492-3.89 3.777-3.89 1.094 0 2.238.195 2.238.195v2.46h-1.26c-1.243 0-1.63.771-1.63 1.562V12h2.773l-.443 2.89h-2.33v6.987C18.343 21.128 22 16.991 22 12z"
                                ></path>
                            </svg>
                        </a>
                    </div>
                </div>
            </div>

            <div class="w-full md:w-1/4 mb-8 md:mb-0">
                <h3 class="text-nord8 font-semibold text-lg">Quick Links</h3>
                <ul class="grid grid-cols-2 gap-x-4 p-0 mt-4">
                  {aboutTbiLinks.map((link) => (
                    <li class="mt-2">
                      <a href={link.href} class="text-nord4 hover:text-nord8">
                        {link.text}
                      </a>
                    </li>
                  ))}
                </ul>
                
              </div>
              
            <div class="w-full md:w-1/4 mb-8 md:mb-0">
                <h3 class="text-nord8 font-semibold text-lg">Location</h3>

                <iframe
                    src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d475.52429044630327!2d78.57132679556355!3d17.54593996114382!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x3bcb835e83bb15f3%3A0xeb19df752c922e0c!2sTechnology%20Business%20Incubator%20-%20BITS%20PILANI%20HYD!5e0!3m2!1sen!2sin!4v1723529179733!5m2!1sen!2sin"
                    width="80%"
                    height="180"
                    style="border:0;"
                    allowfullscreen=""
                    loading="lazy"
                    referrerpolicy="no-referrer-when-downgrade"
                    class="mt-4"></iframe>
            </div>
        </div>
    </footer>
    <section id="bits-logo">
        <div class="bg-nord0 text-nord4">
            <div class="container mx-auto flex justify-between">
                <div class="w-1/4">
                    <img src="/bits.gif" alt="BITS Pilani Logo" class="w-28" />
                </div>
            </div>
        </div>
    </section>
</main>