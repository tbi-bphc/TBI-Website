---
interface Card {
  name: string;
  img: string;
  description: string;
  link: string;
}

const { name, img, link, description } = Astro.props as Card;
---

<div class="border-1 w-[26vh] m-4 border-2 border-black rounded-md">
  <div class="group relative">
    <img
      src={img}
      alt="card"
      class="h-48 w-full object-contain p-2 rounded-t-sm duration-300 group-hover:opacity-5 group-hover:scale-120"
    />
    <div
      class="absolute opacity-0 group-hover:cursor-pointer group-hover:opacity-100 duration-700 h-full w-full top-3 text-black text-center px-2"
    >
      {description}
    </div>
  </div>

  <p class="text-sm p-4 text-center">
    <a href={link} class=" hover:text-nord15">
      {name}
    </a>
  </p>
</div>
