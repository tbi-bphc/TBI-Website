---
interface Card {
  name: string;
  number: string;
  email: string;
  link?: string;
}

const { name, email, number, link } = Astro.props as Card;
---

<div
  class="border-1 w-full md:w-[80vh] my-4 border-2 border-black rounded-sm p-2 bg-nord6"
>
  <h1 class="my-2 text-nord10">{name}</h1>
  <div class="flex">
  </div>
  <div class="md:flex mt-4 justify-between">
    <p>
      {number}
    </p>
    <p>
      {email}
    </p>
  </div>
</div>
